<div class= "container">
    <h3>編集ページ</h3>
    <%=form_tag("/studies/"+@study.id.to_s,:method=>:patch) do %>
      <div class="form-group">
        <%=label_tag "form-question", "Question"%>
        <%=text_field :studies, :question, id:"form-question",class:"form-control",value: @study.question%>
      </div>
      <div class="form-group">
        <%=label_tag "form-answer", "Answer"%>
        <%=text_field :studies, :answer, id:"form-answer",class:"form-control",value: @study.answer%>
      </div>
      <div class="form-group">
        <%=label_tag "form-category", "Category"%>
        <%=select_tag 'studies[category_id]', options_from_collection_for_select(@categories, :id, :name) ,class:"form-control",id:"form-category"%>
      </div>
        <%=submit_tag "Update",class:"btn btn-warning" %>
    <% end %>
</div>